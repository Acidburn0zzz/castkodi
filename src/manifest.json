{
    "applications": {
        "gecko": {
            "id": "castkodi@regseb.github.io",
            "strict_min_version": "54.0"
        }
    },

    "manifest_version": 2,
    "name": "Cast Kodi",
    "version": "0.4.0",

    "description": "__MSG_manifest_description__",
    "icons": {
        "48": "img/icon.svg",
        "96": "img/icon.svg"
    },

    "author": "Sébastien Règne <regseb@gmail.com>",
    "background": {
        "scripts": [
            "lib/require.js", "background.js"
        ]
    },
    "default_locale": "en",
    "homepage_url": "https://github.com/regseb/castkodi",
    "options_ui": {
        "browser_style": true,
        "page": "options/index.html"
    },
    "permissions": ["<all_urls>", "contextMenus", "notifications", "storage"]
}
