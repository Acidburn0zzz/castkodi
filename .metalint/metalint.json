{
    "patterns": [
        "!.git/", "!nyc_output/", "!docs/", "!node_modules/", "**"
    ],
    "checkers": [
        {
            "patterns": "src/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_webext.json"] }
        }, {
            "patterns": "test/**/*.js",
            "linters": { "eslint": ["eslint.json", "eslint_nodejs.json"] }
        }, {
            "patterns": ["**/options/*.html", "**/popup/*.html"],
            "linters": "htmlhint"
        }, {
            "patterns": "**/_locales/**/*.html",
            "linters": {
                "htmlhint": ["htmlhint.json", { "doctype-first": false }]
            }
        }, {
            "patterns": "**/*.css",
            "linters": "stylelint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": null }
        }, {
            "patterns": "package.json",
            "linters": "david"
        }
    ]
}
